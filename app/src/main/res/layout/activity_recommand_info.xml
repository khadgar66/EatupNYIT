<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.teamproject_recomm.lxl.teamapplication.RecommandInfoActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp">


        <TextView
            android:id="@+id/SimiUser_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:text="Recomm_User_Email"
            android:textSize="15sp" />

        <Button
            android:id="@+id/recommand_Bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RecommIN_frequency_textView"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="125dp"
            android:background="@color/white"
            android:text="Similar_user" />

        <Button
            android:id="@+id/btMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recommand_Bt"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:text="Find On Map" />

        <TextView
            android:id="@+id/RecommCNRate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/SimiUser_textView"
            android:layout_marginTop="2dp"
            android:text="CNRate"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/RecommCN_frequency_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RecommCNRate_textView"
            android:layout_marginTop="2dp"
            android:text="Chinese Frequency"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/RecommJPRate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RecommCN_frequency_textView"
            android:layout_marginTop="2dp"
            android:text="JPRate"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/RecommJP_frequency_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RecommJPRate_textView"
            android:layout_marginTop="2dp"
            android:text="Japanese Frequency"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/RecommMXRate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RecommJP_frequency_textView"
            android:layout_marginTop="2dp"
            android:text="MexRate"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/RecommMX_frequency_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RecommMXRate_textView"
            android:layout_marginTop="2dp"
            android:text="Mexico Frequency"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/RecommINRate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RecommMX_frequency_textView"
            android:layout_marginTop="2dp"
            android:text="IndRate"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/RecommIN_frequency_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RecommINRate_textView"
            android:layout_marginTop="2dp"
            android:text="India Frequency"
            android:textSize="15sp" />



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
