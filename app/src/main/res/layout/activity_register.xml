<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.teamproject_recomm.lxl.teamapplication.RegisterActivity">
    <RelativeLayout

        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center">


        <EditText
            android:id="@+id/etRUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="Enter you E-mail address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etPassword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etRUserName"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Enter your password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etPassword1"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Re-enter your password"
            android:inputType="textPassword" />

        <com.spark.submitbutton.SubmitButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"
            android:id="@+id/btRegister"
            android:textColor="@color/gray"
            app:sub_btn_background="@android:color/white"
            app:sub_btn_duration="1000"
            app:sub_btn_line_color="@android:color/holo_green_light"
            app:sub_btn_ripple_color="@android:color/holo_green_light"
            app:sub_btn_tick_color="@color/white"
            android:layout_below="@+id/etPassword2"
            android:layout_centerHorizontal="true" />



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etRUserName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="33dp"
            android:gravity="center"
            android:text="User Register"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ToLogin_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btRegister"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="already have a account? login here!"
            android:visibility="visible" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
