<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nyc"
    tools:context="com.teamproject_recomm.lxl.teamapplication.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        >

        <Button
            android:id="@+id/btProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btshowUserInf"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:alpha="0.66"
            android:text="mProfile"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="455dp" />

        <TextView
            android:id="@+id/edtWelcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="wellcome"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btlogOut"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:alpha="0.66"
            android:text="sign_up" />

        <Button
            android:id="@+id/btlogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="55dp"
            android:alpha="0.66"
            android:paddingBottom="5dp"
            android:text="logout" />

        <Button
            android:id="@+id/btshowUserInf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btSign"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:alpha="0.66"
            android:text="showInfo" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
