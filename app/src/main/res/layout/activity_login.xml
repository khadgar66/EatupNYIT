<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.teamproject_recomm.lxl.teamapplication.LoginActivity">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center">

        <EditText
            android:id="@+id/etLUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etPassword"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:hint="Email address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btLogin"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword" />

        <com.spark.submitbutton.SubmitButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btLogin"
            android:text="Login"
            android:textColor="@color/gray"
            app:sub_btn_background="@android:color/white"
            app:sub_btn_duration="3000"
            app:sub_btn_line_color="@android:color/holo_blue_dark"
            app:sub_btn_ripple_color="@android:color/holo_blue_dark"
            app:sub_btn_tick_color="@color/white"
            android:layout_above="@+id/toRegister"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/toRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="3dp"
            android:text="No Accout? click here!"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etLUserName"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="33dp"
            android:gravity="center"
            android:text="Log In"
            android:textSize="24sp"
            android:visibility="visible"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
