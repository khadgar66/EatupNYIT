<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.teamproject_recomm.lxl.teamapplication.FavType">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp">


        <TextView
            android:id="@+id/FavType_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:text="How do you like these types"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Chinese_type_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/FavType_text"
            android:layout_marginTop="6dp"
            android:text="Chinese"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/ChineseTypeSpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Chinese_type_textView"
            android:layout_marginTop="2dp"
            android:entries="@array/fValue" />

        <EditText
            android:id="@+id/CN_Frequency_EditTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ChineseTypeSpin"
            android:layout_marginTop="2dp"
            android:hint="Enter Times last month "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Japanese_type_Textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/CN_Frequency_EditTextView"
            android:layout_marginTop="6dp"
            android:text="Japanese"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/JapaneseTypeSpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Japanese_type_Textview"
            android:layout_marginTop="2dp"
            android:entries="@array/fValue" />

        <EditText
            android:id="@+id/JP_Frequency_EditTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/JapaneseTypeSpin"
            android:layout_marginTop="2dp"
            android:hint="Enter Times last month "
            android:textSize="14sp" />


        <TextView
            android:id="@+id/India_type_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/JP_Frequency_EditTextView"
            android:layout_marginTop="6dp"
            android:text="India"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/IndiaTypeSpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/India_type_textView"
            android:layout_marginTop="2dp"
            android:entries="@array/fValue"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/IND_Frequency_EditTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IndiaTypeSpin"
            android:layout_marginTop="2dp"
            android:hint="Enter Times last month "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Mexico_type_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/IND_Frequency_EditTextView"
            android:layout_marginTop="6dp"
            android:text="Mexico"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/MexicoTypeSpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Mexico_type_textView"
            android:layout_marginTop="2dp"
            android:layout_alignParentStart="true"
            android:entries="@array/fValue" />

        <EditText
            android:id="@+id/MX_Frequency_EditTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MexicoTypeSpin"
            android:layout_marginTop="2dp"
            android:hint="Enter Times last month "
            android:textSize="14sp" />

        <com.spark.submitbutton.SubmitButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"
            android:id="@+id/favType_submit_bt"
            android:textColor="@color/gray"
            app:sub_btn_background="@android:color/white"
            app:sub_btn_duration="1000"
            app:sub_btn_line_color="@android:color/holo_green_light"
            app:sub_btn_ripple_color="@android:color/holo_green_light"
            app:sub_btn_tick_color="@color/white"
            android:layout_alignTop="@+id/MX_Frequency_EditTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
